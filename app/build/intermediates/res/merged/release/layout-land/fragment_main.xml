<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.compuways.keywordsmanager.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@drawable/wood"
    android:id="@+id/linerLayout">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:background="@drawable/wood"
        android:layout_weight="0.65">

        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="@string/selectasite"
            android:id="@+id/messagView"
            android:background="@color/highlighted_text_material_dark"
            android:textSize="15sp"
            android:textIsSelectable="false"
            android:textAlignment="gravity"
            android:layout_gravity="center"
            android:singleLine="false"
            android:autoText="false"
            android:gravity="center_vertical|center_horizontal|fill_vertical" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lvwSelections"
            android:choiceMode="singleChoice"
            android:clickable="false"
            android:elevation="@dimen/elevation"
            android:layout_margin="0dp"
            android:focusable="false"
            android:background="#d8f4f5" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="0.35">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTools"
            android:layout_weight="1"
            android:allowUndo="true"
            android:background="@drawable/ywoodtools"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:allowUndo="true"
            android:background="@drawable/ywoodsources"
            android:id="@+id/btnSources"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAdkw"
            android:layout_weight="1"
            android:allowUndo="true"
            android:background="@drawable/ywoodkw"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>

</LinearLayout>