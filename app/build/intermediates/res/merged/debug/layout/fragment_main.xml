<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.compuways.keywordsmanager.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@drawable/wood"
    android:id="@+id/linerLayout">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/selectasite"
        android:id="@+id/messagView"
        android:background="@color/highlighted_text_material_dark"
        android:textSize="20sp"
        android:textIsSelectable="false"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:layout_weight="0.05" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvwSelections"
        android:choiceMode="singleChoice"
        android:clickable="false"
        android:elevation="@dimen/elevation"
        android:focusable="false"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="0.75"
        android:background="#d8f4f5" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTools"
            android:layout_weight="1"
            android:allowUndo="true"
            android:background="@drawable/ywoodtools"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:allowUndo="true"
            android:background="@drawable/ywoodsources"
            android:id="@+id/btnSources"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAdkw"
            android:layout_weight="1"
            android:allowUndo="true"
            android:background="@drawable/ywoodkw"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>


</LinearLayout>
